    "version": "0.2.0",
    "compounds": [
        {
            "name": "Development - Fullstack",
            "configurations": [
                // "Development - Api - TorrentDownloads",
                "Development - Api - TorrentSearch",
                "Development - Frontend"
            ]
        }
    ],
    "configurations": [
        {
            "name": "Development - Api - TorrentDownloads",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm start",
            "cwd": "${workspaceFolder}/api-torrentdownloads",
            "envFile": "${workspaceFolder}/api-torrentdownloads/.env.development",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Development - Api - TorrentSearch",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm start",
            "cwd": "${workspaceFolder}/api-torrentsearch",
            "envFile": "${workspaceFolder}/api-torrentsearch/.env.development",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Development - Frontend",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm start",
            "cwd": "${workspaceFolder}/frontend",
            "envFile": "${workspaceFolder}/frontend/.env.development",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}