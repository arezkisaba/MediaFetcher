    "version": "0.2.0",
    "configurations": [
        {
            "name": "Backend - Development",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm start",
            "cwd": "${workspaceFolder}/backend",
            "envFile": "${workspaceFolder}/backend/.env.development",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Frontend - Development",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm start",
            "cwd": "${workspaceFolder}/frontend",
            "envFile": "${workspaceFolder}/frontend/.env.development",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}